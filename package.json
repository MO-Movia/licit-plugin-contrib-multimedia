{
  "name": "@modusoperandi/licit-multimedia",
  "version": "1.0.0",
  "type": "module",
  "subversion": "1",
  "description": "Multimedia plugin built with ProseMirror",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "clean": "rm -rf dist/ bin/ && rm -f modusoperandi-licit-multimedia-*.*.*.tgz",
    "lint:ts": "eslint src --ext .ts,.tsx --fix",
    "lint:css": "stylelint \"**/*.css\" --fix",
    "lint": "npm run lint:css & npm run lint:ts",
    "ci:build": "tsc --build && copyfiles --up 1 \"src/**/*.css\" dist  && copyfiles package.json dist",
    "ci:bom": "cyclonedx-bom -o dist/bom.xml",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "test": "jest --coverage",
    "debug": "node --debug-brk --inspect ./node_modules/.bin/jest -i"
  },
  "peerDependencies": {
    "uuid": "^9.0.0",
    "@modusoperandi/licit-ui-commands": "^1.0.0",
    "prosemirror-model": "^1.16.0"
  },
  "dependencies": {
    "axios": "^1.1.3"
  },
  "devDependencies": {
    "@cfaester/enzyme-adapter-react-18": "^0.7.0",
    "@cyclonedx/bom": "^4.0.3",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "copyfiles": "^2.4.1",
    "enzyme": "^3.11.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.31.10",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.2.0",
    "jest-environment-jsdom": "^29.2.0",
    "jest-json": "^2.0.0",
    "jest-junit": "^16.0.0",
    "jest-prosemirror": "^2.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^15.2.1",
    "prettier": "^3.0.0",
    "react-test-renderer": "^18.2.0",
    "resize-observer-polyfill": "^1.5.1",
    "style-loader": "^3.3.1",
    "stylelint": "^15.10.1",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-prettier": "^4.0.0",
    "text-encoding": "^0.7.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "url": "^0.11.0"
  },
  "overrides": {
    "semver": "^7.5.2"
  },
  "importSort": {
    ".js": {
      "parser": "babylon",
      "style": "module-grouping"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "stylelint --fix"
    ],
    "!(*test|*.setup).ts": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}